{
	"compilerOptions": {
		"target": "es5",
		"lib": ["es5", "es6"],

		"module": "es2015",
		"moduleResolution": "node",

		"strict": true,

		"esModuleInterop": true,
		"resolveJsonModule": true,

		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,

		// "preserveWatchOutput": true,
		"pretty": true
	}
}
